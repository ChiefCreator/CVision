generator client {
  provider = "prisma-client-js"
  output   = "generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email              String     @unique
  password           String
  name               String
  picture            String?
  role               UserRole   @default(regular)
  isVerified         Boolean    @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean    @default(false) @map("is_two_factor_enabled")
  authMethod         AuthMethod @default(credentials) @map("auth_method")

  accounts  Account[]
  documents Document[]
}

model Account {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  type     String
  provider String

  refreshToken String? @map("refresh_token")
  accessToken  String  @map("access_token")
  expiresAt    Int     @map("expires_at")
  email        String?

  userId String @map("user_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Token {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  email     String
  token     String    @unique
  type      TokenType
  expiresIn DateTime  @map("expires_in")
}

model EmailChangeToken {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  currentEmail String   @map("current_email")
  newEmail     String   @map("new_email")
  token        String   @unique
  expiresIn    DateTime @map("expires_in")
}

enum TokenType {
  verification
  two_factor
  password_reset
}

enum UserRole {
  regular
  admin
}

enum AuthMethod {
  credentials
  google
  yandex
}

// Document

enum DocumentName {
  resume
  coverLetter
}

model DocumentType {
  id   String       @id @default(uuid())
  name DocumentName @unique

  templates        DocumentTemplate[]
  sectionTemplates SectionTemplate[]
  documents        Document[]
}

model DocumentTemplate {
  id String @id @default(uuid())

  key         String
  title       String
  description String?
  previewUrl  String? @map("preview_url")

  // Пример структуры:
  //  {
  //   "accentColor": {
  //     "default": "id",
  //     "options": [
  //       { "id": "id", "name": "name", "value": "value" },
  //     ]
  //   },
  //   "font": {
  //     "primary": {
  //       "default": "id",
  //       "options": [
  //         { "id": "id", "name": "name", "value": "value" },
  //       ]
  //     }
  //   },
  //   "spacing": {
  //     "default": "id",
  //     "options": [
  //       { "id": "id", "name": "name", "value": "value" },
  //     ]
  //   },
  //   "size": {
  //     "default": "id",
  //     "options": [
  //       { "id": "id", "name": "name", "value": "value" },
  //     ]
  //   },
  //   "format": {
  //     "default": "id",
  //     "options": [
  //       { "id": "id", "name": "name", "value": "value" },
  //     ]
  //   }
  // }
  settings Json?

  premium                   Boolean  @default(false)
  supportsFontSizing        Boolean  @default(true) @map("supports_font_sizing")
  supportsSpacing           Boolean  @default(true) @map("supports_spacing")
  supportsCustomAccentColor Boolean  @default(true) @map("supports_custom_accent_color")
  supportsPhoto             Boolean  @default(true) @map("supports_photo")
  supportedFormats          String[] @default(["pdf"]) @map("supported_formats")

  documentTypeId String @map("document_type_id")

  documentType DocumentType @relation(fields: [documentTypeId], references: [id])
  documents    Document[]

  @@unique([documentTypeId, key])
}

model Document {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title    String?
  // Пример структуры:
  // {
  //   "accentColor": {
  //     "currentOption": { "id": "id", "name": "name", "value": "value" },
  //   }
  // }
  settings Json?

  userId     String @map("user_id")
  typeId     String @map("type_id")
  templateId String @map("template_id")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type     DocumentType     @relation(fields: [typeId], references: [id])
  template DocumentTemplate @relation(fields: [templateId], references: [id])
  sections Section[]
}

// Section

model SectionTemplate {
  id String @id @default(uuid())

  title        String
  key          String
  schema       Json?
  isDefault    Boolean @default(false) @map("is_default")
  isOrderFixed Boolean @default(false) @map("is_order_fixed")
  defaultOrder Int?    @map("default_order")
  isMultiple   Boolean @default(false)
  isRequired   Boolean @default(false)

  documentTypeId  String  @map("document_type_id")
  allowedChildId  String? @unique @map("allowed_child_id")
  allowedParentId String? @unique @map("allowed_parent_id")

  allowedChild  SectionTemplate? @relation("TemplateChild", fields: [allowedChildId], references: [id])
  childOfThis   SectionTemplate? @relation("TemplateParent")
  allowedParent SectionTemplate? @relation("TemplateParent", fields: [allowedParentId], references: [id])
  parentOfThis  SectionTemplate? @relation("TemplateChild")
  documentType  DocumentType     @relation(fields: [documentTypeId], references: [id])
  sections      Section[]

  @@unique([documentTypeId, key])
}

model Section {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String?
  data  Json?
  order Int

  documentId String  @map("document_id")
  parentId   String? @map("parent_id")
  templateId String  @map("template_id")

  document    Document        @relation(fields: [documentId], references: [id], onDelete: Cascade)
  parent      Section?        @relation("Subsections", fields: [parentId], references: [id], onDelete: Cascade)
  subsections Section[]       @relation("Subsections")
  template    SectionTemplate @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@unique([documentId, parentId, order])
}
