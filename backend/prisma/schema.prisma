generator client {
  provider = "prisma-client-js"
  output   = "generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email              String     @unique
  password           String
  name               String
  picture            String?
  role               UserRole   @default(regular)
  isVerified         Boolean    @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean    @default(false) @map("is_two_factor_enabled")
  authMethod         AuthMethod @default(credentials) @map("auth_method")

  accounts  Account[]
  documents Document[]
}

model Account {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  type     String
  provider String

  refreshToken String? @map("refresh_token")
  accessToken  String  @map("access_token")
  expiresAt    Int     @map("expires_at")
  email        String?

  userId String @map("user_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Token {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  email     String
  token     String    @unique
  type      TokenType
  expiresIn DateTime  @map("expires_in")
}

model EmailChangeToken {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  currentEmail String   @map("current_email")
  newEmail     String   @map("new_email")
  token        String   @unique
  expiresIn    DateTime @map("expires_in")
}

enum TokenType {
  verification
  two_factor
  password_reset
}

enum UserRole {
  regular
  admin
}

enum AuthMethod {
  credentials
  google
  yandex
}

// Document

enum DocumentName {
  resume
  coverLetter
}

model DocumentType {
  id   String       @id @default(uuid())
  name DocumentName @unique

  templates        DocumentTemplate[]
  sectionTemplates SectionTemplate[]
  documents        Document[]
}

model DocumentTemplate {
  id String @id @default(uuid())

  key         String
  title       String
  description String?
  previewUrl  String? @map("preview_url")

  documentTypeId String @map("document_type_id")

  documentType DocumentType @relation(fields: [documentTypeId], references: [id])
  documents    Document[]

  @@unique([documentTypeId, key])
}

model Document {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String?

  userId     String @map("user_id")
  typeId     String @map("type_id")
  templateId String @map("template_id")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type     DocumentType     @relation(fields: [typeId], references: [id])
  template DocumentTemplate @relation(fields: [templateId], references: [id])
  sections Section[]
}

// Section

model SectionTemplate {
  id String @id @default(uuid())

  title        String
  key          String
  schema       Json?
  isDefault    Boolean @default(false) @map("is_default")
  isOrderFixed Boolean @default(false) @map("is_order_fixed")
  defaultOrder Int?    @map("default_order")
  isMultiple   Boolean @default(false)

  documentTypeId String @map("document_type_id")

  documentType    DocumentType              @relation(fields: [documentTypeId], references: [id])
  sections        Section[]
  allowedChildren SectionTemplateRelation[] @relation("ParentTemplate")
  allowedParents  SectionTemplateRelation[] @relation("ChildTemplate")

  @@unique([documentTypeId, key])
}

model SectionTemplateRelation {
  id       String @id @default(uuid())
  parentId String @map("parent_id")
  childId  String @map("child_id")

  parentTemplate SectionTemplate @relation("ParentTemplate", fields: [parentId], references: [id], onDelete: Cascade)
  childTemplate  SectionTemplate @relation("ChildTemplate", fields: [childId], references: [id], onDelete: Cascade)

  @@unique([parentId, childId])
}

model Section {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String?
  data  Json?
  order Int

  documentId String  @map("document_id")
  parentId   String? @map("parent_id")
  templateId String  @map("template_id")

  document    Document        @relation(fields: [documentId], references: [id], onDelete: Cascade)
  parent      Section?        @relation("Subsections", fields: [parentId], references: [id], onDelete: Cascade)
  subsections Section[]       @relation("Subsections")
  template    SectionTemplate @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@unique([documentId, parentId, order])
}
